<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/marks_label_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_title"
        tools:layout_editor_absoluteY="187dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <TextView
                android:id="@+id/txt_no_recy"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="7dp"
                tools:text="No" />
            <TextView
                android:id="@+id/txt_date_recy"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                app:layout_constraintBaseline_toBaselineOf="@+id/txt_no_recy"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/txt_no_recy"
                android:textSize="7dp"
                tools:text="Date" />

            <TextView
                android:id="@+id/txt_title_recy"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                app:layout_constraintBaseline_toBaselineOf="@+id/txt_no_recy"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/txt_date_recy"
                android:textSize="7dp"
                tools:text="Title" />
            <TextView
                android:id="@+id/txt_category_recy"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                app:layout_constraintBaseline_toBaselineOf="@+id/txt_no_recy"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/txt_title_recy"
                android:textSize="7dp"
                tools:text="Category" />
            <TextView
                android:id="@+id/txt_currency_recy"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                app:layout_constraintBaseline_toBaselineOf="@+id/txt_no_recy"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/txt_category_recy"
                android:textSize="7dp"
                tools:text="Currency" />
            <TextView
                android:id="@+id/txt_amount_recy"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                app:layout_constraintBaseline_toBaselineOf="@+id/txt_no_recy"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/txt_currency_recy"
                android:textSize="7dp"
                tools:text="Amount" />
            <TextView
                android:id="@+id/txt_note_recy"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                app:layout_constraintBaseline_toBaselineOf="@+id/txt_no_recy"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/txt_amount_recy"
                android:textSize="7dp"
                tools:text="Note" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>